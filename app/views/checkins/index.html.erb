<p id="notice"><%= notice %></p>

<h1> <% if @user %><%= @user.name.upcase_first %>'s<% end %> Checkins</h1>

<table>
  <thead>
    <tr>
      <th>Week</th>
      <th>User</th>
      <th>Buddy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @checkins.each do |checkin| %>
      <% if not checkin.is_mirror or @user %>
        <tr>
          <td><%= checkin.week %></td>
          <td><%= checkin.user.name %></td>
          <td><%= checkin.buddy.name %></td>
          <td><%= link_to 'Destroy', checkin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Checkin', new_checkin_path %>
<br>
<%= link_to 'Users', users_path %>
<br>
<%= link_to 'Home', welcome_url %>


